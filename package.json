{
  "name": "new-empty-ts-project",
  "private": false,
  "version": "0.0.1",
  "license": "MIT",
  "main": ".build/index.js",
  "files": [
    ".build/**/*"
  ],
  "scripts": {
    "lint": "eslint \"src/**/*.ts\"",
    "lint:withtest": "eslint \"src/**/*.ts\" \"test/**/*.ts\"",
    "comment": ".js is omitted as this is continuously updated",
    "prebuild": "rimraf build/",
    "build": "node esbuild.config.js",
    "serve": "(trap 'kill 0' SIGINT; yarn build --watch & nodemon)",
    "serve:watchexec": "todo: build poc with watchexec instead of nodemon ",
    "start:debug": "DEBUG=express:* nodemon --inspect 'src/index.ts'",
    "postinstall": "husky install",
    "test": "jest --config jest.config.js",
    "test:watch": "jest --watch --verbose false --coverage --notify",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "13.1.0",
    "@commitlint/config-conventional": "13.1.0",
    "@tsconfig/node14": "1.0.1",
    "@types/jest": "27.0.1",
    "@types/node": "14.17.11",
    "@typescript-eslint/eslint-plugin": "4.29.2",
    "@typescript-eslint/parser": "4.29.2",
    "dotenv": "10.0.0",
    "esbuild": "0.12.22",
    "esbuild-node-externals": "1.3.0",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "3.4.1",
    "husky": "7.0.1",
    "jest": "27.0.6",
    "node-notifier": "10.0.0",
    "pinst": "2.1.6",
    "prettier": "2.3.2",
    "prettier-standard": "16.4.1",
    "rimraf": "3.0.2",
    "ts-jest": "27.0.5",
    "typescript": "4.3.5"
  },
  "dependencies": {
    "json-colorizer": "2.2.2",
    "winston": "3.3.3"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
