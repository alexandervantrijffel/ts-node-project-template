{
  "name": "new-empty-ts-project",
  "private": true,
  "version": "0.0.1",
  "license": "MIT",
  "main": "dist/index.js",
  "directories": {
    "lib": "dist",
    "test": "__tests__"
  },
  "files": [
    "dist/**/*"
  ],
  "types": "dist/src/index.d.ts",
  "scripts": {
    "comment": ".js is omitted as this is continuously updated",
    "start": "ts-node-dev --respawn --pretty --transpile-only src/index.ts",
    "start:nodemon": "nodemon --ext 'ts,tsx,json' --watch '**' --exec 'DEBUG=express:* ts-node src/index.ts'",
    "start:debug": "nodemon --inspect 'src/index.ts'",
    "postinstall": "husky install",
    "prebuild": "rimraf build/",
    "build": "tsc --project ./",
    "test": "jest --config jest.config.js",
    "test:watch": "jest --watch --verbose false --coverage --notify",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "devDependencies": {
    "@commitlint/cli": "13.1.0",
    "@commitlint/config-conventional": "13.1.0",
    "@types/jest": "27.0.1",
    "@types/node": "^14.17.9",
    "@types/winston": "2.4.4",
    "@typescript-eslint/eslint-plugin": "4.29.2",
    "@typescript-eslint/parser": "4.29.2",
    "dotenv": "10.0.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "3.4.0",
    "husky": "7.0.1",
    "jest": "27.0.6",
    "pinst": "2.1.6",
    "prettier": "2.3.2",
    "prettier-standard": "16.4.1",
    "rimraf": "3.0.2",
    "ts-jest": "27.0.5",
    "ts-node": "10.2.0",
    "ts-node-dev": "1.1.8",
    "tslint": "6.1.3",
    "typescript": "4.3.5"
  },
  "dependencies": {
    "@tsconfig/node14": "1.0.1",
    "json-colorizer": "2.2.2",
    "winston": "3.3.3"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "nodemonConfig": {
    "execMap": {
      "ts": "node --require ts-node/register/transpile-only"
    }
  }
}
