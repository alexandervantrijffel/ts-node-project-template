{
  "name": "new-empty-ts-project",
  "version": "0.0.1",
  "license": "MIT",
  "main": ".build/index.js",
  "files": [
    ".build/**/*"
  ],
  "type": "module",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint --cache . --ext ts,tsx",
    "prebuild": "rimraf .build/",
    "build": "node -r dotenv/config --loader tsx esbuild.config.js",
    "prepare": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable",
    "postinstall": "husky install",
    "start": "tsx src/index.ts",
    "start:watch": "tsx watch src/index.ts",
    "start:debug": "DEBUG=express:* nodemon --inspect 'src/index.ts'",
    "test": "vitest",
    "upgrade-all": "yarn-upgrade-all"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --cache . --ext ts,tsx --fix",
      "prettier --write ."
    ],
    "*.tsx": [
      "eslint --cache  . --ext ts,tsx --fix",
      "prettier --write ."
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@tsconfig/node18": "^1.0.1",
    "@types/node": "^18.14.6",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "danger": "^11.2.4",
    "danger-plugin-jest": "^1.3.0",
    "eslint": "^8.36.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.32.2",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "pinst": "^3.0.0",
    "prettier": "^2.8.5",
    "prettier-standard": "^16.4.1",
    "rimraf": "^4.4.0",
    "tsx": "^3.12.5",
    "typescript": "*",
    "vite": "4.2.0",
    "vitest": "^0.29.3",
    "yarn-upgrade-all": "^0.7.2"
  },
  "dependencies": {
    "dotenv": "^16.0.3",
    "json-colorizer": "^2.2.2",
    "winston": "^3.8.2"
  },
  "engines": {
    "node": ">=v18.14.2"
  }
}
