{
  "name": "new-empty-ts-project",
  "version": "0.0.1",
  "license": "MIT",
  "main": ".build/index.mjs",
  "files": [
    ".build/**/*"
  ],
  "type": "module",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint --cache . --ext ts,tsx",
    "prebuild": "rimraf .build/",
    "build": "node -r dotenv/config --loader tsx esbuild.config.js",
    "prepare": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable",
    "postinstall": "husky install",
    "start": "tsx src/index.ts",
    "start:watch": "tsx watch src/index.ts",
    "start:debug": "node --inspect  --loader tsx 'src/index.ts'",
    "test": "vitest",
    "upgrade-all": "yarn-upgrade-all"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --cache . --ext ts,tsx --fix",
      "prettier --write ."
    ],
    "*.tsx": [
      "eslint --cache  . --ext ts,tsx --fix",
      "prettier --write ."
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.1",
    "@commitlint/config-conventional": "^17.6.1",
    "@tsconfig/node18": "^2.0.0",
    "@types/node": "^18.16.0",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "danger": "^11.2.6",
    "danger-plugin-jest": "^1.3.0",
    "eslint": "^8.39.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.32.2",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.1",
    "pinst": "^3.0.0",
    "prettier": "^2.8.8",
    "prettier-standard": "^16.4.1",
    "rimraf": "^5.0.0",
    "tsx": "^3.12.6",
    "typescript": "^5.0.4",
    "vite": "^4.3.1",
    "vitest": "^0.30.1",
    "yarn-upgrade-all": "^0.7.2"
  },
  "dependencies": {
    "dotenv": "^16.0.3",
    "json-colorizer": "^2.2.2",
    "winston": "^3.8.2"
  },
  "engines": {
    "node": ">=v18.16.0"
  },
  "packageManager": "yarn@3.5.0"
}
